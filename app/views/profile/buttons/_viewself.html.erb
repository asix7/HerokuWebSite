<!-- Buttons to display own profile-->

<!-- Update profile details button-->
<div class="edit-profile row"> 
	<button type="button" class="btn profile-btn btn-default" data-toggle="modal" data-target="#edit-profile">
		Update Details
	</button>
</div>
<!-- Collaborations Rquests button-->
<div class="coll-requests row">
	<%= form_tag({:controller => 'collaboration', :action => 'showRequests'}, method: "get") do %>	
		<%= submit_tag("Requests (#{@num_requests})", :class => 'btn profile-btn btn-success') %>
  	<% end %>
</div>
<!-- Manage danations button-->
<div class="donations row">
	<button type="button" class="btn profile-btn btn-primary" data-toggle="modal" data-target="#change-payment-email">Donation Email</button>
</div>
<!-- Track upload button-->
<div class="track-upload row">
	<button type="button" class="btn profile-btn btn-danger" data-toggle="modal" data-target="#track-upload">
		Upload a Track
	</button>
</div>


