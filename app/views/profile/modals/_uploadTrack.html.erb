<form class="form-horizontal submit-track" enctype="multipart/form-data" 
      onsubmit="return verify_upload();"	action="/newTrack" method="post">		
	
    <div class="new-track-name form-group">
		<label for="track-name" class="col-md-4 control-label">Track Name:</label>							
		<div class="col-md-7">
			<input id="track-name" type="text" class="form-control" name="track-name" onfocus="clearErrorMessage()" required maxlength="30">
			<div id="track-outcome"></div>
		</div>
	</div>


	<div class="new-track-img form-group">
		<label for="track-img" class="col-md-4 control-label">Track Image:</label>
		<div class="col-md-7">
			<input id="track-img" type="file" name="track-img" accept="image/*"required>
		</div>
	</div>

	<div class="form-group">
		<label for="track-genre" class="col-md-4 control-label">Genre:</label>
		<div class="col-md-7">
			<select name="genre">
				<option value="Pop">Pop</option>
  				<option value="Blues">Blues</option>
  				<option value="Classical">Classical</option>
  				<option value="Country">Country</option>
  				<option value="Electronic">Electronic</option>
  				<option value="Folk">Folk</option>
  				<option value="Hip hop">Hip-Hop</option>
  				<option value="Jazz">Jazz</option>
  				<option value="Reggae">Reggae</option>
  				<option value="Religious">Religious</option>
  				<option value="Rock">Rock</option>
  				<option value="Traditional">Traditional</option>
  				<option value="Other">Other</option>
            </select>
		</div>
	</div>

	<div class="new-track-file form-group">
		<label for="track-file" class="col-md-4 control-label">Track File:</label>
		<div class="col-md-7">
			<input id="track-file" type="file" name="track-file" accept="audio/*" required>
		</div>
	</div>	
	<div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <!-- Make it possbile to submit the form in the modal -->
        <button id="submit-track" class="btn btn-primary">Upload Track</button>       
      </div>
</form>

